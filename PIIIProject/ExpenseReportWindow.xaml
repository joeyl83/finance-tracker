<Window x:Class="PIIIProject.ExpenseReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIIIProject"
        mc:Ignorable="d"
        Title="ExpenseReportWindow" Height="350" Width="500"
        ResizeMode="NoResize">
    
    <StackPanel Height="300" Width="320" Margin="15,0,15,15" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Expense Report" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Margin="30,15,0,-10" x:Name="TotalBalance"/>
        <Label Margin="0,30,0,0" HorizontalAlignment="Center" Content=""  FontSize="15" FontWeight="DemiBold" x:Name="ReportText"/>
        <Button Background="LightSkyBlue" Click="BtnSaveExpenseReport" Content="Save" Height="20" Width="150" Margin="0,80,0,5"/>
        <Button Background="LightSkyBlue" Click="Exit" Content="Exit" Height="20" Width="150" Margin="0,0,0,5"/>
    </StackPanel>
</Window>
